{
  "name": "brms-linter",
  "version": "0.0.1",
  "description": "A linter for BRMS",
  "main": "app.js",
  "dependencies": {
    "antlr4": "4.8.0",
    "glob": "7.1.6"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "prettier": "2.0.4"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:lint": "npm run test:prettier && npm run test:eslint",
    "start": "node app.js ./sample.srl",
    "prettier": "prettier --write \"src/**/*.js\"",
    "test:eslint": "eslint --config eslintrc.json \"src/**/*.js\"",
    "test:prettier": "prettier --check \"src/**/*.js\""
  },
  "author": "jeremiec",
  "license": "MIT"
}
